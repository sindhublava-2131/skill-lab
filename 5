def assign_tasks(cost):
    n = len(cost)
    dp = [float('inf')] * (1 << n)
    dp[0] = 0

    for mask in range(1 << n):
        worker = bin(mask).count('1')
        if worker >= n:
            continue

        for task in range(n):
            if not (mask & (1 << task)):
                new_mask = mask | (1 << task)
                dp[new_mask] = min(
                    dp[new_mask],
                    dp[mask] + cost[worker][task]
                )

    return dp[(1 << n) - 1]
